<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %> | PaduKarya
  </title>
  <%- include("../../../_style") %>
</head>

<body>
  <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
    <%- include("../../../_header") %>
    <%- include("../../../_sidebar", { page: 'pengadaan' }) %>
    <%- include("../../../_toast") %>

    <div class="page-wrapper">
      <%- include("../_breadcrumb", {title: "RAB Material Pengadaan", pengadaan: pengadaan}) %>
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-3">
            <%- include('../_sidebar', {page: 'material'}) %>
          </div>
          <div class="col-9">
            <div class="card">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <h4 style="font-weight: 500;">List Material</h4>
                  <a href="/pengadaan/<%= pengadaan._id %>/material/baru">
                    <button class="btn btn-dark">Input Baru</button>
                  </a>
                </div>
                <hr>
                <div class="table-responsive">
                  <table id="data_table" class="table bordertable-bordered text-nowrap" style="width: 100%;">
                    <thead>
                      <tr>
                        <th>Material</th>
                        <th>Harga</th>
                        <th>Jumlah</th>
                        <th>Subtotal</th>
                        <th>:</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% materials.forEach(function(material) { %>
                        <tr>
                          <td>
                            <a href="/prk/<%= material.prk_id %>"><small style="font-weight: 600;"><%= material.nomor_prk %></small></a><br>
                            <small class="text-muted"><%= material.kode_normalisasi %></small> <br>
                            <p class="mb-0" style="white-space:break-spaces"><%= material.nama_material %></p>
                          </td>
                          <td><%= new Intl.NumberFormat('en-US', {style: 'currency', currency: 'IDR'}).format(material.harga) %>/<%= material.satuan %></td>
                          <td><%= new Intl.NumberFormat('en-US').format(material.jumlah) %><%= material.satuan %></td>
                          <td><%= new Intl.NumberFormat('en-US', {style: 'currency', currency: 'IDR'}).format(material.harga * material.jumlah) %></td>
                          <td>
                            <div class="dropdown">
                              <button class="btn dropdown-toggle" style="background-color: #fff; box-shadow: 0 0 0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" class="h-4 w-4"><path d="M3.625 7.5C3.625 8.12132 3.12132 8.625 2.5 8.625C1.87868 8.625 1.375 8.12132 1.375 7.5C1.375 6.87868 1.87868 6.375 2.5 6.375C3.12132 6.375 3.625 6.87868 3.625 7.5ZM8.625 7.5C8.625 8.12132 8.12132 8.625 7.5 8.625C6.87868 8.625 6.375 8.12132 6.375 7.5C6.375 6.87868 6.87868 6.375 7.5 6.375C8.12132 6.375 8.625 6.87868 8.625 7.5ZM12.5 8.625C13.1213 8.625 13.625 8.12132 13.625 7.5C13.625 6.87868 13.1213 6.375 12.5 6.375C11.8787 6.375 11.375 6.87868 11.375 7.5C11.375 8.12132 11.8787 8.625 12.5 8.625Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path></svg>
                              </button>
                              <ul class="dropdown-menu border">
                                <li><a class="dropdown-item" href="#">Edit</a></li>
                                <!-- <div class="dropdown-divider"></div> -->
                                <li><a class="dropdown-item d-flex justify-content-between" href="#">Hapus <i class="bi bi-trash"></i></a></li>
                              </ul>
                            </div>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../../_script") %>
    <script>
      $('#data_table').DataTable();
    </script>
  </div>
</body>

</html>