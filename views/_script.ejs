    $(document).ready(function() {
      $('#toastIcon').attr('class', "<% if(toast.success) { %>bi bi-check-circle<% } else { %>bi bi-x-circle<% } %>");
      $('#toastTitle').html("<%= toast.success ? 'Berhasil' : 'Error' %>")
      $('#toastBody').html(`<%- toast.message %>`);
      bootstrap.Toast.getOrCreateInstance($('#toast')).show()
    })
  </script>
<% } %>
<script>
  function formatNumberInput(el) {
    const val = parseFloat(el.val().replace(/\./g, '').replace(/\,/g, '.'));

    if (!isNaN(val)) {
      el.val(val.toLocaleString('id-ID', {
        minimumFractionDigits: 0,
        maximumFractionDigits: 4
      }));
    }
  }

  function formatNumber(el, fraction = false) {
    const raw = parseFloat(el.value.replace(/\./g, '').replace(/\,/g, '.'));
    if (!isNaN(raw)) {
      if(fraction) {
        el.value = raw.toLocaleString('id-ID', {
          minimumFractionDigits: 0,
          maximumFractionDigits: 4
        });
      } else {
        el.value = raw.toLocaleString('id-ID');
      }
    }
  }

  function unformatNumber(el) {
    if(el.value === '') {
      el.value = '';
      return;
    }
    
    el.value = el.value.replace(/\./g, '').replace('\,/g', '.');
  }
</script>