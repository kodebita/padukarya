<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %> | PaduKarya
  </title>
  <%- include("../../_style") %>
</head>

<body>
  <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
    <%- include("../../_header") %>
    <%- include("../../_sidebar") %>
    <%- include("../../_toast") %>

    <div class="page-wrapper">
      <%- include("_breadcrumb", {title: "Informasi PRK", prk: prk}) %>
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-3">
            <%- include('_sidebar', {page: 'detail', prk: prk}) %>
          </div>
          <div class="col-9">
            <div class="card">
              <div class="card-body">
                <h4 style="font-weight: 500;">Informasi</h4>
                <hr>
                <form action="/prk/<%= prk._id %>" method="POST">
                  <input type="hidden" name="token" value="<%= token %>">
                  <div class="mb-4">
                    <label for="" class="form-label">Tahun</label>
                    <input type="number" name="tahun" id="" class="form-control" style="max-width: 220px;" value="<%= prk.tahun %>">
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.tahun %>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="" class="form-label">Basket</label>
                    <select name="basket" id="" class="form-control" style="max-width: 220px;">
                      <option value="">Pilih basket</option>
                      <option value="1" <% if(prk.basket == 1 ){ %> selected <% } %>>1</option>
                      <option value="2" <% if(prk.basket == 2 ){ %> selected <% } %>>2</option>
                      <option value="3" <% if(prk.basket == 3 ){ %> selected <% } %>>3</option>
                    </select>
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.basket %>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="nama_project" class="form-label">Nama Project</label>
                    <textarea class="form-control" name="nama_project" rows="2"><%= prk.nama_project %></textarea>
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.nama_project %>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="" class="form-label">Nomor PRK</label>
                    <input type="text" name="nomor_prk" id="" class="form-control" value="<%= prk.nomor_prk %>">
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.nomor_prk %>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="" class="form-label">Tipe</label>
                    <select name="type" id="" class="form-control" style="max-width: 220px;">
                      <option value="">Pilih tipe</option>
                      <option value="murni" <% if(prk.type == "murni") { %> selected <% } %>>Murni</option>
                      <option value="turunan" <% if(prk.type == "turunan") { %> selected <% } %>>Turunan</option>
                    </select>
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.type%>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="" class="form-label">Lot</label>
                    <input type="number" name="nomor_lot" id="" class="form-control" style="max-width: 220px;" value="<%= prk.nomor_lot %>">
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.nomor_lot %>
                      </div>
                    <% } %>
                  </div>
                  <div class="mb-4">
                    <label for="" class="form-label">Prioritas</label>
                    <select name="prioritas" id="" class="form-control" style="max-width: 220px;">
                      <option value="">Pilih prioritas</option>
                      <option value="1" <% if(prk.prioritas == 1) { %> selected <% } %>>1</option>
                      <option value="2" <% if(prk.prioritas == 2) { %> selected <% } %>>2</option>
                      <option value="3" <% if(prk.prioritas == 3) { %> selected <% } %>>3</option>
                      <option value="4" <% if(prk.prioritas == 4) { %> selected <% } %>>4</option>
                    </select>
                    <% if(errors) { %>
                      <div class="text-danger mt-2 text-sm">
                        <%= errors.prioritas %>
                      </div>
                    <% } %>
                  </div>
                  <hr>
                  <div class="d-flex justify-content-end">
                    <button class="btn btn-dark">Perbarui</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include("../../_script") %>
  </div>
</body>

</html>